{{end}}

{{define "content"}}
<div class="card mt-4">
    <div class="card-header">
        <h2 class="mt-2">Venda</h2>
    </div>
    <div class="card-body">
        <p>
            <strong>NÂº Venda:</strong> 
            <span id="sale-id"></span>
        </p>
        <p>
            <strong>Cliente:</strong>
