{{template "base" .}}

{{define "css"}}
    <style>
        .card {
            max-width: 700px;
            margin: 0 auto;
            padding: 10px 30px;
            border: 1px solid #ccc;
            margin-top: 80px;
            background-color: #e9ecef;
        }
        .card-header {
            background-color: #e9ecef;
        }
    </style>
{{end}}

{{define "title"}}
    Comprar
{{end}}

{{define "content"}}
    <div class="card">
        <div class="card-header">
            <h2 class="text-center">Comprar Widget</h2>
        </div>
        <div class="card-body">
            <img src="/static/img/widget.png" class="image-fluid rounded mx-auto d-block" alt="">
        </div>
    </div>
{{end}}