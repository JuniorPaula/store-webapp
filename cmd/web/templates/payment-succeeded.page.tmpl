{{template "base" .}}

{{define "title"}}
    Payment Succeeded
{{end}}

{{define "content"}}
    <h2 class="mt-2">Payment Succeeded</h2>
    <hr />
    <p>Intenção de pagamento: {{index .Data "paymentIntent"}}</p>
    <p>titular do cartão: {{index .Data "cardholder"}}</p>
    <p>Email: {{index .Data "email"}}</p>
    <p>Método de pagamento: {{index .Data "paymentMethod"}}</p>
    <p>Valor do pagamento: {{index .Data "paymentAmount"}}</p>
    <p>Moeda: {{index .Data "paymentCurrency"}}</p>
{{end}}